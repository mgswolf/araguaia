<tr class="banner">
  <td><%= link_to banner.id, admin_banner_path(banner) %></td>
  <td><%= link_to image_tag(banner.cover(:thumb)), [:admin,banner] %></td>
  <td><%= localize(banner.created_at, format: :short) %></td>
  <td>
    <%= link_to t("helpers.links.view"),
                admin_banner_path(banner), :class => 'btn btn-mini' %>
    <%= link_to t("helpers.links.edit"),
                edit_admin_banner_path(banner), :class => 'btn btn-info btn-mini' %>
    <%= link_to t("helpers.links.destroy"),
                admin_banner_path(banner), method: :delete, confirm: t('helpers.links.confirm'), :class => 'btn btn-danger btn-mini' %>
  </td>
</tr>
