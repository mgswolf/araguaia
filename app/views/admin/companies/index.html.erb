<%= provide(:title,  t('admin.companies')) %>
<%= provide :breadcrumb do %>
    <li class="active"><%= t('admin.company') %></li>
<% end %>
<%= provide :sidebar do %>
    <%=  form_for [:admin,@search] do |f| %>
        <li class="nav-header"><%= f.label :title, t('activerecord.attributes.company.title') %></li>
        <li><%= f.text_field :title_contains %></li>
        <hr/>
        <li class="nav-header"><%=t 'helpers.order'  %></li>
        <%= f.sort_link :id %> |
        <%= f.sort_link :title %> |
        <%= f.sort_link :created_at, t('helpers.created_at') %>
        <hr/>
        <%= f.submit t('helpers.links.search'), class: 'btn btn-primary' %> <%= link_to t('helpers.links.cancel'), admin_companies_path, class: 'btn' %>
    <% end %>
<% end %>
<div class="page-header">
  <h2><%=  t('admin.company') %></h2>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Id</th>
    <th><%= t_field('company','title') %></th>
    <th><%= t('helpers.created_at') %></th>
    <th><%=t 'helpers.actions' %></th>
  </tr>
  </thead>
  <tbody>
  <%= render @companies %>
  </tbody>
</table>
<%= will_paginate @companies %>
<%= link_to t("helpers.links.new"),
            new_admin_company_path,
            :class => 'btn btn-primary' %>
