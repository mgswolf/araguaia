<%= provide(:title,  t('admin.contacts')) %>
<%= provide :breadcrumb do %>
    <li class="active"><%= t('admin.contacts') %></li>
<% end %>
<%= provide :sidebar do %>
    <%=  form_for [:admin,@search] do |f| %>
        <li class="nav-header"><%= f.label :email_contains %></li>
        <li><%= f.text_field :email_contains %></li>
        <li class="nav-header"><%= f.label :subject_contains %></li>
        <li><%= f.text_field :subject_contains %></li>
        <hr/>
        <li class="nav-header"><%=t 'helpers.order'  %></li>
        <%= f.sort_link :id %> |
        <%= f.sort_link :email %> |
        <%= f.sort_link :created_at, t('helpers.created_at') %>
        <hr/>
        <%= f.submit t('helpers.links.search'), class: 'btn btn-primary' %> <%= link_to t('helpers.links.cancel'), admin_contacts_path, class: 'btn' %>
    <% end %>
<% end %>
<div class="page-header">
  <h2><%=  t('admin.contacts') %></h2>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Id</th>
    <th><%= t_field('contact','email') %></th>
    <th><%= t_field('contact','subject') %></th>
    <th><%= t('helpers.created_at') %></th>
    <th><%=t 'helpers.actions' %></th>
  </tr>
  </thead>
  <tbody>
  <%= render @contacts %>
  </tbody>
</table>
<%= will_paginate @contacts %>

