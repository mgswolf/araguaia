<%= provide :breadcrumb do %>
    <li><%= link_to t('admin.jobs'), admin_jobs_path %><span class="divider">/</span></li>
    <li class="active"><%= @job.title %></li>
<% end %>
<div class="page-header">
  <h2><%= @job.title %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t_field('job','title') %>:</strong></dt>
  <dd><%= @job.title %></dd>
  <dt><strong><%= t_field('job','caption') %>:</strong></dt>
  <dd><%= @job.caption %></dd>
  <dt><strong><%= t_field('job','cover') %>:</strong></dt>
  <dd><%= image_tag @job.cover.url(:thumb) %></dd>
  <dt><strong><%= t_field('job','description') %>:</strong></dt>
  <dd><%= @job.description %></dd>
</dl>
<br ><h4>Imagens</h4>
<ul class="thumbnails">

  <% @job.job_images.each do |image| %>
    <li>
      <%= image_tag image.pic.url(:thumb) %>
    </li>
  <% end %>
</ul>

<div class="form-actions">
  <%= link_to t('helpers.links.back', :default => t("helpers.links.back")),
              admin_jobs_path, :class => 'btn'  %>
  <%= link_to t("helpers.links.edit"),
              edit_admin_job_path(@job), :class => 'btn btn-info' %>
  <%= link_to t("helpers.links.destroy"),
              admin_job_path(@job),
              :method => 'delete',
              :data => { :confirm => t("helpers.links.confirm", :default => 'Are you sure?') },
              :class => 'btn btn-danger' %>
</div>
