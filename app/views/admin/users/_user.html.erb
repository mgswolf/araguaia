<tr class="user">
  <td><%= link_to user.id, admin_user_path(user) %></td>
  <td><%= user.company %></td>
  <td><%= user.email %></td>
  <td><%=l user.created_at %></td>
  <td>
    <%= link_to t("helpers.links.view"),
                admin_user_path(user), :class => 'btn btn-mini' %>
    <%= link_to t("helpers.links.edit"),
                edit_admin_user_path(user), :class => 'btn btn-info btn-mini' %>
    <%= link_to t("helpers.links.destroy"),
                admin_user_path(user), method: :delete, confirm: t('helpers.links.confirm'), :class => 'btn btn-danger btn-mini' %>
  </td>
</tr>
