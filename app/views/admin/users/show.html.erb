<%= provide :breadcrumb do %>
    <li><%= link_to t('admin.users'), admin_users_path %><span class="divider">/</span></li>
    <li class="active"><%= @user.email %></li>
<% end %>
<div class="page-header">
  <h2><%= @user.email %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t_field('user','name') %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= t_field('user','email') %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= t_field('user','company') %>:</strong></dt>
  <dd><%= @user.company %></dd>
</dl>


<div class="form-actions">
  <%= link_to t('helpers.links.back', :default => t("helpers.links.back")),
              admin_users_path, :class => 'btn'  %>
  <%= link_to t("helpers.links.edit"),
              edit_admin_user_path(@user), :class => 'btn btn-info' %>
  <%= link_to t("helpers.links.destroy"),
              admin_user_path(@user),
              :method => 'delete',
              :data => { :confirm => t("helpers.links.confirm", :default => 'Are you sure?') },
              :class => 'btn btn-danger' %>
</div>
