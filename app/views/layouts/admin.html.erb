<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "Araguaia" %></title>
  <%= csrf_meta_tags %>

  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
  <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
  <![endif]-->

  <%= stylesheet_link_tag "admin/application", :media => "all" %>

  <!-- For all other devices -->
  <!-- Size should be 32 x 32 pixels -->
  <link rel="shortcut icon" href="assets/favicon.png" type="image/png">
</head>
<body>

<div class="navbar navbar-fluid-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/admin">Temporada</a>
      <div class="container-fluid nav-collapse">
        <ul class="nav">
          <li><%= link_to t('admin.equipment'), admin_equipment_index_path %></li>
          <li><%= link_to t('admin.laboratory_items'), admin_laboratory_items_path %></li>
          <li><%= link_to t('admin.reports'), admin_reports_path %></li>
          <li><%= link_to t('admin.users'), admin_users_path %></li>
          <li><%= link_to t('admin.services'), admin_services_path %></li>
          <li><%= link_to t('admin.jobs'), admin_jobs_path %></li>
          <li><%= link_to t('see_site'), root_path, target: '_blank'  %></li>
          <li><%#= link_to t('devise.links.sign_out'), destroy_session_path(current_user), method: :delete  %></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>

<div class="container-fluid">
  <ul class="breadcrumb">
    <li><a href="/admin"><%= t('helpers.links.home') %></a> <span class="divider">/</span></li>
    <%= yield :breadcrumb %>
  </ul>
  <div class="row-fluid">

    <div class="<%= content_for?(:sidebar) ? 'span9' : 'span12' %>">
      <%= bootstrap_flash %>
      <%= yield %>
    </div>

    <% if content_for?(:sidebar) %>
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <%= yield :sidebar %>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
    <% end %>
  </div><!--/row-->

  <footer>
    <p>&copy; Araguaia 2013</p>
  </footer>

</div> <!-- /container -->

<!-- Javascripts
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<%= javascript_include_tag "admin/application" %>

</body>
</html>
